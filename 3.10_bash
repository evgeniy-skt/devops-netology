4. Скрипт
ips=("192.168.0.1:80" "173.194.222.113:80" "87.250.250.242:80")
while ((1==1))
do
	for ip in ${ips[@]}
		do
			status_code=$(curl --write-out %{http_code} --silent --output /dev/null $ip)
			if (($status_code >= 500))
				then
					ip >> error.log
					exit
            fi
		done
	sleep 3
done